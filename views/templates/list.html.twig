<!doctype html>
<html lang="en">
<head>

    <link rel="stylesheet" href="views/css/style.css">  
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>My Webpage</title>
</head>
<body>

    <h1>List of cat and dog breeds</h1>

    <ul id="breeds">
    {% if listOfBreeds|length < 1 %}
    No results found.
{% else %}

{% for entry in listOfBreeds %} 
 <li>{{ entry.type|capitalize }}: <span class="breed-name">{{ entry.label }}</span>{% if isVerbose %} | Temperament: {{ entry.temperament }} {% if entry.type is same as 'dog breed' %}| Breed group: {{ entry.breed_group }} {% else %}| Origin: {{ entry.origin }} {% endif %} {% endif %}</li>
{% endfor %}

{% endif %}

    </ul>
</body>
</html>
